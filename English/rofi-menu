#!/bin/bash
cd $HOME
cd .Rofi-menu/English
function help {
        echo -e "    \e[100m\e[1m\e[31m┌──────────[HELP]──────────┐\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│-h --help   this window   │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│-n   normal theme         │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│-f   fancy theme          │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│-d   dmenu theme          │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│-u   uninstall rofi-menu  │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│-up   update rofi-menu    │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m└──────────[V1.0]──────────┘\e[0m"
}
prompt=$1
        if [[ $1 == --help ]]; then
        help
        elif [[ $1 == -h ]]; then
        help
        elif [[ $1 == -n ]]; then
        ./Iniciar
        elif [[ $1 == -f ]]; then
        cd fancy
        ./Iniciar
        elif [[ $1 == -d ]]; then
        cd dmenu
        ./Iniciar
        elif [[ $1 == -u ]]; then
        chmod +x Des
        ./Des
        elif [[ $1 == -up ]]; then
        sudo pacman -Syu --noconfirm
        yay -Syu --noconfirm
        sudo rm -r $HOME/upt-rofi; git clone https://github.com/LBY-L/Rofi-menu $HOME/upt-rofi; cd $HOME/upt-rofi; chmod +x Install; ./Install -e
        elif [[ -z $1 ]]; then
        help
        else
        help
        fi

