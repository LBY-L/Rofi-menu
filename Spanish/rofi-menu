#!/bin/bash
cd $HOME
cd .Rofi-menu/Spanish
function help {
        echo -e "    \e[100m\e[1m\e[31m┌──────────[HELP]──────────┐\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│\e[34m-h --help\e[0m\e[100m\e[1m\e[31m   esta ventana  │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│\e[34m-n\e[0m\e[100m\e[1m\e[31m   tema normal          │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│\e[34m-f\e[0m\e[100m\e[1m\e[31m   tema fancy           │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│\e[34m-d\e[0m\e[100m\e[1m\e[31m   tema dmenu           │\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│\e[34m-u\e[0m\e[100m\e[1m\e[31m   desinstalar rofi-menu│\e[0m"
        echo -e "    \e[100m\e[1m\e[31m│\e[34m-up\e[0m\e[100m\e[1m\e[31m   actualizar rofi-menu│\e[0m"
        echo -e "    \e[100m\e[1m\e[31m└──────────[V1.1]──────────┘\e[0m"
}
prompt=$1
        if [[ $1 == --help ]]; then
        help
        elif [[ $1 == -h ]]; then
        help
        elif [[ $1 == -n ]]; then
        ./Iniciar
        elif [[ $1 == -f ]]; then
        cd fancy
        ./Iniciar
        elif [[ $1 == -d ]]; then
        cd dmenu
        ./Iniciar
        elif [[ $1 == -u ]]; then
        chmod +x Des
        ./Des
        elif [[ $1 == -up ]]; then
        sudo pacman -Syu --noconfirm
        yay -Syu --noconfirm
        sudo rm -r $HOME/upt-rofi; git clone https://github.com/LBY-L/Rofi-menu $HOME/upt-rofi; cd $HOME/upt-rofi; chmod +x Install; ./Install -s
        elif [[ -z $1 ]]; then
        help
        else
        help
        fi

